  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/**/**/*.ts",
    "**/**/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/attendance-records.tsx/*.tsx"
  ]
}
